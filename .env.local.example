# Privy Configuration
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# Zora API Key (must be public for metadata interactions)
NEXT_PUBLIC_ZORA_API_KEY=your_zora_api_key_here

# Server Wallet (for creating coins on server)
SERVER_WALLET_PRIVATE_KEY=your_private_key_here

# Base RPC URL
BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_RPC=https://mainnet.base.org

# Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

NEXT_PUBLIC_MIXPANEL_TOKEN=your_token_here
MIXPANEL_SECRET=your_project_secret_for_server_side

# Stellar / Soroban (claim points)
# Simple payment contract (sends tokens via send_token). Claim-points API invokes this contract.
NEXT_PUBLIC_SIMPLE_PAYMENT_CONTRACT_ADDRESS_TESTNET=
NEXT_PUBLIC_SIMPLE_PAYMENT_CONTRACT_ADDRESS_MAINNET=
# Claim-points token contract address (the token the simple payment contract sends on claim)
NEXT_PUBLIC_CLAIM_POINTS_CONTRACT_ADDRESS_TESTNET=
NEXT_PUBLIC_CLAIM_POINTS_CONTRACT_ADDRESS_MAINNET=
# Optional: key that signs the claim-points transaction (server pays fees)
REWARDS_TOKEN_OWNER_SECRET_KEY=